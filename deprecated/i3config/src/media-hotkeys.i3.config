# media keys / volume control etc.
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume @DEFAULT_SINK@ +5%"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume @DEFAULT_SINK@ -5%"
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle # 'pactl list sinks' to get sink number

# media keys / Pause, Play, Next, Prev
bindsym XF86AudioPlay exec "playerctl play-pause "
bindsym XF86AudioNext exec "playerctl next"
bindsym XF86AudioPrev exec "playerctl previous "

# change brightness
bindsym XF86MonBrightnessUp exec "light -A 10"
bindsym XF86MonBrightnessDown exec "light -U 10"
# using https://github.com/haikarainen/light.git

